@{
  Layout = "_Layout";
}

@model DoctorsOffice.Models.Specialty;


<h1>Specialty Details</h1>
<hr />
<ul>
@if (@Model.Doctors.Count == 0)
{
  <p>This Specialty Does Not Contain Any Doctors.</p>
}
else
{
  <h4>Doctors</h4>
  @foreach(var join in Model.Doctors)
  {
    <li>@Html.ActionLink($"{@join.Doctor.LastName}, {@join.Doctor.FirstName}", "Details", "Doctors", new {id = join.DoctorId}) </li>
  }
}
<hr />
<p>@Html.ActionLink("Back to Specialties", "Index")</p>
<p>@Html.ActionLink("Add a Specialty", "AddSpecialty", new { id = Model.SpecialtyId })</p>
<p>@Html.ActionLink("Delete Specialty", "Delete", new { id = Model.SpecialtyId })</p>


