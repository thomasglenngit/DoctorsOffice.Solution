@{
  Layout = "_Layout";
}

@using DoctorsOffice.Models;
@model DoctorsOffice.Models.Doctor;

<h2>Doctor Details</h2>
<hr />
<h3>@Model.FirstName @Model.LastName</h3>
<hr />
<ul>
@if (@Model.Patients.Count == 0)
{
  <p>This Doctor does not contain any patients.</p>
}
else
{
  <h4>Patients</h4>
  @foreach(var join in Model.Patients)
  {
    <li>@Html.ActionLink($"{@join.Patient.LastName}, {@join.Patient.FirstName}", "Details", "Patients", new {id = join.PatientId})</li>
  }
  <hr />
  <h4>Specialties</h4>
  @foreach(var join in Model.Specialties)
  {
    <li>@Html.ActionLink(@join.Specialty.SpecialtyName, "Details", "Specialties", new {id = join.SpecialtyId})</li>
  }
}
<hr />
<p>@Html.ActionLink("Back to doctors", "Index")</p>
<p>@Html.ActionLink("Edit Doctor", "Edit", new { id = Model.DoctorId })</p>
<p>@Html.ActionLink("Add a Specialty", "AddSpecialty", new { id = Model.DoctorId })</p>
<p>@Html.ActionLink("Delete Doctor", "Delete", new { id = Model.DoctorId })</p>